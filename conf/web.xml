<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.4">
	<servlet>
		<servlet-name>DemoServlet</servlet-name>
		<servlet-class>servlets.DemoServlet</servlet-class>
		<init-param>
			<param-name>greeting</param-name>
			<param-value>Bonjour!</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>BusyServlet</servlet-name>
		<servlet-class>servlets.BusyServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>CookieServlet1</servlet-name>
		<servlet-class>servlets.CookieServlet1</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>CookieServlet2</servlet-name>
		<servlet-class>servlets.CookieServlet2</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>CookieServlet3</servlet-name>
		<servlet-class>servlets.CookieServlet3</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>InitParamServlet</servlet-name>
		<servlet-class>servlets.InitParamServlet</servlet-class>
		<init-param>
			<param-name>TestParam</param-name>
			<param-value>InitParam!</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<servlet-name>SessionServlet1</servlet-name>
		<servlet-class>servlets.SessionServlet1</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>SessionServlet2</servlet-name>
		<servlet-class>servlets.SessionServlet2</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>SessionServlet3</servlet-name>
		<servlet-class>servlets.SessionServlet3</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DemoServlet</servlet-name>
		<url-pattern>/DemoServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>BusyServlet</servlet-name>
		<url-pattern>/BusyServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CookieServlet1</servlet-name>
		<url-pattern>/CookieServlet1</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CookieServlet2</servlet-name>
		<url-pattern>/cookie2</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CookieServlet3</servlet-name>
		<url-pattern>/cookie3</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>InitParamServlet</servlet-name>
		<url-pattern>/InitParamServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SessionServlet1</servlet-name>
		<url-pattern>/SessionServlet1</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>SessionServlet2</servlet-name>
		<url-pattern>/session2</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>SessionServlet3</servlet-name>
		<url-pattern>/session3</url-pattern>
	</servlet-mapping>


	<context-param>
		<param-name>webmaster</param-name>
		<param-value>contextParam</param-value>
	</context-param>
	
	<context-param>
		<param-name>webmaster_2</param-name>
		<param-value>contextParam_2</param-value>
	</context-param>
	
</web-app>